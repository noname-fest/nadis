@model nadis.Models.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="UserFullname">Введите Полное Имя пользователя (описание)</label><br />
            <input type="text" asp-for="UserFullname" />
            <span asp-validation-for="UserFullname"></span>
        </div>
        <div>
            <label asp-for="username">Введите Имя пользователя (логин)</label><br />
            <input type="text" asp-for="username" />
            <span asp-validation-for="username"></span>
        </div>
        <div>
            <label asp-for="userpassword">Введите пароль</label><br />
            <input asp-for="userpassword" />
            <span asp-validation-for="userpassword"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <label asp-for="KIDro">Код района</label><br />
            <!--<input asp-for="KIDro" />-->
            @Html.DropDownList("KIDro", ViewBag.KIDroList as SelectList, new { @class = "form-control" })
            <span asp-validation-for="KIDro"></span>
        </div>
        <div>
            <label asp-for="Role">Роль пользователя</label><br />
            <input asp-for="Role" />
            <span asp-validation-for="Role"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">На главную</a>