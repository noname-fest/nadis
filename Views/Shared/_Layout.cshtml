<!DOCTYPE html>
<html lang="ru-RU">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - nadis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!--<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">nadis</a>-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if(@ViewBag.Page=="Home"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <font color="blue">
                                    НАДИС
                                    </font>
                                </a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">НАДИС</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if(@ViewBag.Page=="CtVet1a"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1a" asp-action="Index">
                                    <font color="blue">Заразные</font></a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1a" asp-action="Index">Заразные</a>
                            }
                        </li>
                        <li class="nav-item">
                             @if(@ViewBag.Page=="CtVet1b"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1b" asp-action="Index">
                                    <font color="blue">Диагностика</font></a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1b" asp-action="Index">Диагностика</a>
                            }                       
                        </li>
                        <li class="nav-item">
                             @if(@ViewBag.Page=="CtVet1c"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1c" asp-action="Index">
                                    <font color="blue">Профилактика</font></a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="CtVet1c" asp-action="Index">Профилактика</a>
                            }
                        </li>
                        <li class="nav-item">
                             @if(@ViewBag.Page=="BioPrep"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="BioPrep" asp-action="Index">
                                    <font color="blue">Биопрепараты</font></a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="BioPrep" asp-action="Index">Биопрепараты</a>
                            }
                        </li>
                        <li class="nav-item">
                             @if(@ViewBag.Page=="Privacy"){
                                <b>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <font color="blue">Privacy</font></a>
                                </b>
                            } else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - nadis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
