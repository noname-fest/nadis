@model nadis.Models.CtVet1c
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="KIDro" />

            <div class="form-group">
                <label asp-for="RepMO" class="control-label"></label>
                @Html.DropDownList("RepMO", ViewBag.RepMoList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="RepMO" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KIDdivDisplay" class="control-label"></label>
                <!--<input asp-for="KIDdiv" class="form-control" />-->
                @Html.DropDownList("KIDdiv", ViewBag.KIDdivList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="KIDdiv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="dtObs" class="control-label"></label>
                <input asp-for="dtObs" class="form-control" type="date" />
                <span asp-validation-for="dtObs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KIDspcDisplay" class="control-label"></label>
                @Html.DropDownList("KIDspc", ViewBag.KIDspcList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="KIDspc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KIDdisDisplay" class="control-label"></label>
                @Html.DropDownList("KIDdis", ViewBag.KIDdisList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="KIDdis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KIDtrtDisplay" class="control-label"></label>
                @Html.DropDownList("KIDtrt", ViewBag.KIDtrtList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="KIDtrt" class="text-danger"></span>
            </div>

             <p>Молодняк</p>
            <div class="form-group pl-5">
                <label asp-for="tmalage1" class="control-label"></label>
                <input asp-for="tmalage1" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="tmalage1" class="text-danger"></span>
            </div>
            <div class="form-group pl-5">
                <label asp-for="tfemage1" class="control-label"></label>
                <input asp-for="tfemage1" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="tfemage1" class="text-danger"></span>
            </div>

            <p>Взрослые особи</p>
            <div class="form-group pl-5">
                <label asp-for="tmalage2" class="control-label"></label>
                <input asp-for="tmalage2" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="tmalage2" class="text-danger"></span>
            </div>
            <div class="form-group pl-5">
                <label asp-for="tfemage2" class="control-label"></label>
                <input asp-for="tfemage2" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="tfemage2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" asp-route-id="@Model.ID" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку</a>
</div>

